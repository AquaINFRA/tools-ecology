<tool id="xarray_mapplot" name="NetCDF xarray map plotting" profile="20.05" version="0.18.2">
    <description>Visualize netCDF variables on a geographical map</description>
    <requirements>
        <requirement type="package" version="3">python</requirement>
        <requirement type="package" version="1.5.6">netcdf4</requirement>
        <requirement type="package" version="0.18.2">xarray</requirement>
        <requirement type="package" version="0.19.0">cartopy</requirement>
        <requirement type="package" version="3.4.2">matplotlib</requirement>
        <requirement type="package" version="1.2">cmcrameri</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
    mkdir output_dir &&
    mkdir -p `pwd`/mlp_tmpdir &&
    MPLCONFIGDIR=`pwd`/mlp_tmpdir &&
    echo "Galaxy xarray version 0.18.2" > output_dir/version.txt &&
    python '$__tool_directory__/xarray_mapplot.py' '$input' '$var'
    #if $condi_datetime.datetime=="yes"
         --time="$condi_datetime.time_values"
    #end if
         --latitude="$lat_dim"
         --longitude="$lon_dim"
         --select
    #if $colorbar_label
         --label="$colorbar_label"
    #end if
    #if $title
         --title=$title
    #end if
    #if $cmap
         --cmap='$cmap'
    #end if
    #if $proj
         --proj='$proj'
    #end if
    #if $land
         --land='$land'
    #end if
    #if $ocean
         --ocean='$ocean'
    #end if
    #if $coastline
         --coastline='$coastline'
    #end if
    #if $borders
         --borders='$borders'
    #end if
    #if $threshold
         --threshold='$threshold'
    #end if
    #if $range
         --range='$range'
    #end if
    #if $xlim
         --xlim='$xlim'
    #end if
    #if $ylim
         --ylim='$ylim'
    #end if
    #if $shift
         --shift
    #end if
           --verbose &&
    mv *.png output_dir
    ]]></command>
